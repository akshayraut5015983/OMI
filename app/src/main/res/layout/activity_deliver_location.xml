<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lllocation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DeliverLocationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#876"
        android:orientation="vertical"
        android:weightSum="10">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_weight="6"
            android:background="#777"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/searchView1"
                    android:layout_width="250dp"
                    android:layout_height="34dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="14dp"
                    android:hint="Search Location"
                    android:textColor="@android:color/black"
                    android:background="@android:color/white" />

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/txt_currentLocation"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/img_marker"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/white"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/img_marker"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/ic_location_on_black_24dp"
                    android:backgroundTint="@color/red" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_locate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/_15sdp"
                    android:backgroundTint="@color/colorPrimary"
                    android:src="@drawable/ic_gps_fixed_black_24dp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@drawable/signup_bg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSetLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Set Delivery Location"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSetLocation"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Location"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etSetLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLc"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/white"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/colorWhite" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etSetLocation"
                android:layout_marginTop="@dimen/_12sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAddMoredetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etSetLocation"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@drawable/button_bg"
                    android:padding="@dimen/_5sdp"
                    android:text="Search Location"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnConfirmLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etSetLocation"
                    android:layout_gravity="center"
                    android:background="@drawable/button_bg"
                    android:padding="@dimen/_5sdp"
                    android:text="Confirm Location"
                    android:textColor="@color/black" />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>